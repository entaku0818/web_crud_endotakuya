<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
  <form-beans>
    <form-bean name="loginForm" type="jp.co.sss.crud.form.LoginForm"/>
    <form-bean name="topForm" type="jp.co.sss.crud.form.TopForm"/>
    <form-bean name="changeForm" type="jp.co.sss.crud.form.ChangeForm"/>
  </form-beans>
  <action-mappings>
    <!-- LoginActionの実装 -->
    <action path="/login" name="loginForm" type="jp.co.sss.crud.action.LoginAction" scope="request" validate="true" input="/index.jsp">
      <forward name="success" path="/top.do"/>
      <forward name="error" path="/employee/error.jsp"/>
    </action>
    <!-- LogoutActionの実装 -->
    <action path="/logout" type="jp.co.sss.crud.action.LogoutAction">
      <forward name="success" path="/index.jsp"/>
    </action>
    <!-- TopActionの実装 -->
    <action path="/top" type="jp.co.sss.crud.action.TopAction">
      <forward name="success" path="/employee/top.jsp"/>
    </action>
    <!-- FindActionの実装 -->
    <action path="/find" name="topForm" type="jp.co.sss.crud.action.FindAction" scope="request" validate="true" input="/employee/top.jsp">
      <forward name="success" path="/employee/top.jsp"/>
    </action>
    <!-- Sample07 LookupDispatchActionの実装 -->
    <action path="/change" name="topForm" type="jp.co.sss.crud.action.ChangeAction" parameter="method">
      <forward name="create" path="/employee/create.jsp"/>
      <forward name="update" path="/employee/update.jsp"/>
      <forward name="delete" path="/employee/chkDelete.jsp"/>
    </action>
    <!-- CreateActionの実装 -->
    <action path="/create" name="changeForm" type="jp.co.sss.crud.action.CreateAction" parameter="method">
      <forward name="check" path="/employee/chkCreate.jsp"/>
      <forward name="complete" path="/employee/finCreate.jsp"/>
      <forward name="top" path="/top.do"/>
    </action>
    <!-- UpdateActionの実装 -->
    <action path="/update" name="changeForm" type="jp.co.sss.crud.action.UpdateAction" parameter="method">
      <forward name="check" path="/employee/chkUpdate.jsp"/>
      <forward name="complete" path="/employee/finUpdate.jsp"/>
      <forward name="top" path="/top.do"/>
    </action>
    <!-- deleteActionの実装 -->
    <action path="/delete" name="changeForm" type="jp.co.sss.crud.action.DeleteAction" parameter="method">

      <forward name="complete" path= "/employee/finDelete.jsp"/>
      <forward name="top" path="/top.do"/>
    </action>
  </action-mappings>
  <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>
  <message-resources parameter="MessageResources"/>
  <plug-in className="org.apache.struts.tiles.TilesPlugin">
    <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml"/>
    <set-property property="moduleAware" value="true"/>
  </plug-in>
  <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    <set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
  </plug-in>
</struts-config>
